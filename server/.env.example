# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/exercise-coin

# JWT Secret (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Coin Daemon Configuration (Exercise Coin unique ports)
# Mainnet: RPC=39338, P2P=39339
# Testnet: RPC=39341, P2P=39340
COIN_DAEMON_HOST=localhost
COIN_DAEMON_PORT=39338
COIN_DAEMON_USER=exercisecoin
COIN_DAEMON_PASS=your-rpc-password

# Exercise Detection Settings
MIN_EXERCISE_DURATION_SECONDS=60
STEPS_PER_SECOND_MIN=1
STEPS_PER_SECOND_MAX=5
MINING_SECONDS_PER_EXERCISE_SECOND=0.5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Panel
ADMIN_API_KEY=generate-a-secure-admin-key-here
